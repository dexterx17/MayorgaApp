<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="6dp"
    android:paddingRight="6dp">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nombre de Producto"
        android:id="@+id/tvNombreAddProducto"
        android:elegantTextHeight="true"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="2dp"
        android:inputType="textMultiLine"
        android:gravity="center"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Ingrese la Cantidad"
        android:id="@+id/tvCantidad" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etCantidadAddProducto"
        android:hint="Cantidad"
        android:inputType="number"
        android:layout_gravity="center"
        android:gravity="center" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Seleccione el Precio"
        android:id="@+id/tvPrecioAF" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="true"
        android:id="@+id/spnPrecioAddProducto"
        android:gravity="center"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
